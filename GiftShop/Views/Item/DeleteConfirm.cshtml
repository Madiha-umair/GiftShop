

@model GiftShop.Models.ItemDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this Item?</h2>

<a href="/Item/List">Cancel</a>


<div>Item Name:@Model.ItemName </div>
