
@model GiftShop.Models.ItemDto

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form action="/Item/Update/@Model.ItemId" method="POST" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            
                @* Pass through the item ID *@
                <div>
                    <label>ItemId:</label>
                    <input type="number" name="ItemId" value="@Model.ItemId" />
                </div>
                <div>
                    <label>Item Name:</label>
                    <input type="text" name="ItemName" value="@Model.ItemName" />
                </div>
                <div>
                    <label>Item Description:</label>
                    <input type="text" name="ItemDescription" value="@Model.ItemDescription" />
                </div>
            
        </div>
        <div class="col-md-6 col-sm-12">
            <input type="file" name="ItemPic" />
        </div>
    </div>
    <div>
        <input type="submit" value="Update Item" />
    </div>

</form>

