

@model GiftShop.Models.ViewModels.DetailsOrder
@{
    ViewBag.Title = "ShowOrder";
}

<h2>Order Details</h2>

    <h3>Customer Name :@Model.SelectedOrder.CustomerName </h3>
    <div>Customer Address :@Model.SelectedOrder.CustomerAddress</div>
    <div>Customer ContactNo :@Model.SelectedOrder.CustomerContactNo</div>
    <div>Order Date  :@Model.SelectedOrder.OrderDate </div>
    <div>Total Items:@Model.SelectedOrder.TotalItems</div>
    <div>Total Amount :@Model.SelectedOrder.TotalAmount</div>


    <div style=" margin-top: 30px; margin-bottom: 130px; ">
        <a style="border: 1px solid black; text-decoration:none; margin-right: 15px; text-align: center; display: inline-block; background-color: lightgrey; color:black; width: 120px; " href="/Order/List"> Go back to List</a>
        <a style="border: 1px solid black; text-decoration: none; margin-right: 15px; text-align: center; display: inline-block; background-color: #47d147; color: black; width: 120px; " href="/Order/Edit/@Model.SelectedOrder.OrderId">Update</a>
        <a style="color: #ab2020; text-decoration: none; text-align: center; display: inline-block; border: 1px solid black; background-color:crimson; color: black; width: 120px; " href="/Order/DeleteConfirm/@Model.SelectedOrder.OrderId">Delete</a>
    </div>


<div style="margin-top:100px;">
    <h3>Gifts related to this Order</h3>
    @foreach(var gift in Model.RelatedGifts)
            {
                <p> <a href="/Gift/Details/@gift.GiftId">@gift.GiftBasketSize</a> basket contains <a>@gift.GiftBasketDetails</a> </p>
                <br/>
            }
</div>
